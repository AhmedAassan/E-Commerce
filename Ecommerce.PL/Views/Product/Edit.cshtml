@model Ecommerce.BL.Models.ProductVM 
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Product" asp-action="Edit">
	<div class="form-group row">
		<label class="col-sm-12 col-md-2 col-form-label">Name</label>
		<div class="col-sm-12 col-md-10">
			<input asp-for="Name" class="form-control" type="text" placeholder="The Product Name">
			<span asp-validation-for="Name" class="text-white bg-danger"></span>
		</div>
	</div>



	<div class="form-group row">
		<label class="col-sm-12 col-md-2 col-form-label">Color</label>
		<div class="col-sm-12 col-md-10">
			<input class="form-control" asp-for="Color"  type="color">
			<span asp-validation-for="Color" class="text-white bg-danger"></span>
		</div>
	</div>
	
	<div class="form-group row">
		<label class="col-sm-12 col-md-2 col-form-label">Size</label>
		<div class="col-sm-12 col-md-10">
			<input asp-for="Size" class="form-control" type="text" placeholder="Enter the Size">
			<span asp-validation-for="Size" class="text-white bg-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<label class="col-sm-12 col-md-2 col-form-label">Price</label>
		<div class="col-sm-12 col-md-10">
			<input asp-for="Price" class="form-control" type="number" placeholder="Enter the Price">
			<span asp-validation-for="Price" class="text-white bg-danger"></span>
		</div>
	</div>


	<div class="form-group row">
		<label class="col-sm-12 col-md-2 col-form-label">Quantity</label>
		<div class="col-sm-12 col-md-10">
			<input asp-for="Quantity" class="form-control" type="text" placeholder="Enter the Quantity">
			<span asp-validation-for="Quantity" class="text-white bg-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<label class="col-sm-12 col-md-2 col-form-label">Description</label>
		<div class="col-sm-12 col-md-10">
			<textarea class="form-control"  placeholder="Enter the Quantity" asp-for="Description"></textarea>
		</div>
	</div>

	<div class="form-group row">
		<label class="col-sm-12 col-md-2 col-form-label">ProductUser</label>
		<div class="col-sm-12 col-md-10">
			<input asp-for="ProductUser" class="form-control" type="text" placeholder="Name Of ProductUser">
			<span asp-validation-for="ProductUser" class="text-white bg-danger"></span>
		</div>
	</div>
	<center>
        <input type="submit" value="Update" class="btn btn-primary" />
        <input type="reset" value="Cancle" class="btn btn-danger" />
    </center>
</form>
							

		@section JqueryValidation{
			<script src="~/jquery-validation/dist/jquery.validate.js"></script>
			<script src="~/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
		}

