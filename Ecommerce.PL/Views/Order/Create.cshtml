@model Ecommerce.BL.Models.OrderVM
@inject Ecommerce.BL.Interface.ICustomerRep customer
@inject Ecommerce.BL.Interface.IProductRep product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Order" asp-action="Create">

	<select asp-for="CustomerId">
        <option value="default">Choose Customer</option>
		@foreach (var item in customer.Get())
		{
			<option value="@item.Id">@item.Name</option>
		}
    </select>  


    <div class="col-md-6" data-select2-id="8">
			<div class="form-group" data-select2-id="7">
				<label>Choose Your Products</label>
				<select  asp-for="ProductId" class="custom-select2 form-control select2-hidden-accessible" multiple="" style="width: 100%" data-select2-id="4" tabindex="-1" aria-hidden="true">
					
							@foreach (var item in product.Get())
								{
									<option value="@item.Id" data-select2-id="@item.Id">@item.Name</option>
								}
					
					
				</select>
			</div>
	</div> 
	<center>
        <input type="submit" value="Save" class="btn btn-primary" />
        <input type="reset" value="Cancle" class="btn btn-danger" />
    </center>
</form>

